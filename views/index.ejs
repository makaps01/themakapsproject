<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        body{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #406882;
        }
        .container {
            width: 300px;
            height: auto;
            padding: 20px;
            background-color: #adcbd7;
            border-radius: 10px;
        }
        .head{
            padding: 0;
            width: 100%;
            height: 60px;
        }
        .head h3{
            text-align: center;
            width: 100%;
            color: #1A374D;
        }
        .row label{
            color: #1A374D;
            padding-top: 10px;
        }
        button{
            margin-top: 30px;
        }
        button:hover{
            background-color: #6998ab;
            color: white;
        }
        .row a{
            color: black;
            text-decoration: none;
        }
        .row a:hover{
            text-decoration: underline;
            color: white;
        }
    </style>
</head>
<body>
<form action="/" method="GET">
    <div class="container">
        <div class="head">
            <h3>STI COLLEGE</h3>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="s_y">School year</label>
                <input type="number" name="sy" class="form-control">
            </div>
          </div>
          <div class="row">
            <div class="col-12">
                <label for="course">Course</label>
                <input type="text" name="course" class="form-control">
            </div>
          </div>
          <div class="row">
            <div class="col-6">
                <button type="submit" name="submit" class="form-control">LOGIIN</button>
            </div>
            <div class="col-6">
                <button class="form-control"><a href="/register">SIGNUP</a></button>
            </div>
          </div>
          
      </div>
      
</form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
