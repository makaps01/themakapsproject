                                    <thead>
                                        <tr>
                                            <th>System ID</th>
                                            <th>Mobile Number</th>
                                            <th>Year Admitted</th>
                                            <th>Full Name</th>
                                            <th>Email</th>
                                            <th>Birthday</th>
                                      
                                         
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% for(var i=0; i < accounts.length; i++) { %>
                                        <tr>
                                            <td><%= accounts[i].sys_id %></td>
                                            <td><%= accounts[i].m_number %></td>
                                            <td><%= accounts[i].y_admitted %></td>
                                            <td><%= accounts[i].full_name %></td>
                                            <td><%= accounts[i].email %></td>
                                            <td><%= accounts[i].birthday %></td>
                                       

                                                                                   
                                        </tr>
                                   <% } %>
                                    </tbody>
                                </table>
