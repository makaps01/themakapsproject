                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-2 border-left-primary">

                            <button class="btn btn-primary mb-2 mt-2" type="button" data-toggle="modal" data-target="#AddAccountModal">Add Account</button>
                            
                            <!---modal button-->
<!----------------->
                            <!---modal form-->
                            <form action="/accounts/add-account" method="post" onsubmit="confirm('Add new account?')">
                            <div class="modal fade" id="AddAccountModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="title">Add new Account</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="close">
                                                <Span aria-hidden="true">&times;</Span>
                                            </button>
                                        </div>
                                        <div class="modal-body" id="account">
                                            <!---content of modal here-->
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input type="number" name="m_number" maxlength="11" class="form-control form-control-user"
                                                    id="exampleInputSchoolid" placeholder="Enter Mobile Number">
                                                </div>
                                                <div class="col-sm-6 mb-sm-0">
                                                    <input type="number" name="y_admitted" maxlength="4" class="form-control form-control-user" id="exampleYearGrad"
                                                        placeholder="Year admitted..." required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" name="full_name" class="form-control form-control-user" id="exampleFullName"
                                                    placeholder="First Name, Middile Initial, Last Name, (Suffix if given)" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="email" name="email" class="form-control form-control-user" id="exampleInputEmail"
                                                placeholder="Enter Email Address..." required>
                                        </div>
                                        <div class="form-group mb-sm-0">
                                    
                                            <label for="form-group" class="form-block">Birthday</label>
                                            <input type="date" name="birthday" class="form-control form-control-user" id="exampleInputEmail"
                                                placeholder="Enter birthday..." required>
                                                                           
                                        </div>
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <label for="form-group">Enter Password</label>
                                            <input type="password" name="p_word" class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="Password" required>
                                        </div>
                                        <div class="col-sm-6 mb-sm-0">
                                            <label for="formControlSelectCampus">Select Campus</label>
                                                <select name="campus" class="form-control" required>
                                                    <option>STI College Cauayan</option>
                                                  </select>
                                                  <small id="emailHelp" class="form-text text-muted">This system is only available for former <strong>students</strong> of <strong>STI Cauayan</strong></small>
                                        </div>
                                    </div>
                                            <hr>
    
                                           
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Save</button>
                                          </div>
                                    </div>
                                </div>
                            </div>
                        </form>
