<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>STI-Document Request || Get started!</title>
    <link rel="icon" type="image/xicon" href="/image/sticauayan.png">
     <!-- Custom fonts for this template-->
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" rel="stylesheet" type="text/css">
     <link
         href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
         rel="stylesheet">

    <!-- Custom styles for this templateb-->
    <link href="/css/main.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Enter Information</h1>
                                    </div>
                                    <form action="/fill-up" method="post">
                                        <div class="form-group">
                                            <!--Button trigger modal to upload photo-->
                                            <button class="btn btn-primary mb-2 mt-2" type="button" data-toggle="modal" data-target="#UploadImageFile">Upload Image</button>
                                            <!--Modal form to upload mimage-->
                                            <form role="form" action="/img-post" method="POST" enctype="multipart/form-data" accept-charset='UTF-8'>
                                                <div class="modal fade" id="UploadImageFile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-lg" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Upload Image</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                                                                    <Span aria-hidden="true">&times;</Span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body form-group">
                                                                <div class="row">
                                                                    <div class="col-lg-10">
                                                                        <input type="file" id="customFile" name="image_req" accept="image/*" class="form-control form-control-user " required>
                                                                    </div>
                                                                    <input type="submit" onclick='return confirm("Confirm details are correct?")'>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        
                                                    </div>
                                            </div>
                                            </form>
                                        </div>
                                        <div class="form-group">
                                            <label for="formControlSelectDocs">Select Document type</label>
                                            <select name="doc_type" class="form-control">
                                                <option>Certificate of Grades</option>
                                                <option>Transcript of Records</option>
                                                <option>Diploma</option>
                                                <option>Good Moral Character</option>
                                                <option>Honorable Dissmisal</option>
                                                <option>English Medium Certificate</option>
                                              </select>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6">
                                                <label for="form-control" class="form-block">Year admitted</label>
                                                <input type="number" name="y_admitted" class="form-control form-control-user" id="exampleYearGrad"
                                                value="<%= regform[0].y_admitted %>" readonly>
                                            </div>
                                            <div class="col-sm-6">
                                                <label for="form-control" class="form-block">Mobile Number</label>
                                                <input type="number" name="m_number" class="form-control form-control-user" id="exampleMobileNumber"
                                                value="<%= regform[0].m_number %>" readonly>
                                            </div>                                                                                                            
                                        </div>
                                        <div class="form-group">
                                            <label for="form-group" class="from-block">Full Name</label>
                                                <input type="text" name="full_name" class="form-control form-control-user" id="exampleFullName"
                                                value="<%= regform[0].full_name %>" readonly>
                                        </div>
                                        <div class="form-group">
                                            <label for="form-group" class="form-block">Email</label>
                                            <input type="email" name="email" class="form-control form-control-user" id="exampleInputEmail"
                                            value="<%= regform[0].email %>" readonly>
                                        </div>
                                            <hr>
                                            <hr>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Submit</button>
                                        <button type="button" class="btn btn-light btn-user btn-block"><a href="/login">Logout</a></button>
                                        <hr>
                                        <hr>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>


    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
    <script>
        const date = document.getElementById('today');
        const e = document.write(newDate());

    </script>
</body>

</html>